# Production Environment Variables for Render Deployment

# Server Configuration
NODE_ENV=production
PORT=10000

# Hugging Face API (Required for AI features)
HF_TOKEN=hf_your_token_here_get_from_huggingface_settings

# Clerk Authentication (Optional - for user management)
VITE_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_key_here
CLERK_SECRET_KEY=sk_test_your_clerk_secret_here

# CORS Configuration
CORS_ORIGIN=https://your-render-app-name.onrender.com

# Database (Optional - if you add database later)
DATABASE_URL=your_database_connection_string_here

# API Rate Limiting
API_RATE_LIMIT=100
API_WINDOW_MS=900000

# File Upload Limits
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=csv,json,xlsx

# Logging
LOG_LEVEL=info